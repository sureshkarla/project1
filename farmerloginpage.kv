<FarmerLoginPage>
    name: "farmerloginpage"
    FitImage:
        source: "Image/Mango feild.jpg"

    MDBoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        spacing: 60
        padding: 50
        MDButton:
            style: "filled"
            theme_bg_color: "Custom"
            md_bg_color: "#24e37d"
            pos_hint: {"center_x":.5, "center_y":.5}
            on_release:
                app.root.current = "FarmerLoginPage"
                root.manager.transition.direction = "left"

            MDButtonText:
                style: "outlined"
                text: "Farmer"
                theme_font_size: "Custom"
                font_size: "20sp"
                theme_text_color: "Custom"
                text_color: "white"

        MDButton:
            style: "filled"
            theme_bg_color: "Custom"
            md_bg_color: "#24e37d"
            pos_hint: {"center_x":.5, "center_y":.5}
            on_release:
                app.root.current = "VendorLoginPage"
                root.manager.transition.direction = "left"
            MDButtonText:
                style: "outlined"
                text: "Vendor"
                theme_font_size: "Custom"
                font_size: "20sp"
                theme_text_color: "Custom"
                text_color: "white"