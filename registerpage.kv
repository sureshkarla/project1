<RegisterPage>
    name: "registerpage"
    MDScreen:
        theme_bg_color: "Custom"
        md_bg_color: self.theme_cls.backgroundColor
        MDCard:
            style: "outlined"
            pos_hint: {"center_x": .5, "center_y": .5}
            padding: "4dp"
            size_hint: None, None
            size: "430dp", "500dp"
            theme_shadow_color: "Custom"
            shadow_color: "green"
            theme_bg_color: "Custom"
            md_bg_color: "white"
            md_bg_color_disabled: "grey"
            theme_shadow_offset: "Custom"
            shadow_offset: (1, -2)
            theme_shadow_softness: "Custom"
            shadow_softness: 1
            theme_elevation_level: "Custom"
            elevation_level: 2
            MDBoxLayout:
                orientation: "vertical"
                spacing: 20
                padding: 50
                MDTextField:
                    id: first_name
                    mode: "outlined"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    theme_font_size: "Custom"
                    font_size: "18sp"
                    MDTextFieldLeadingIcon:
                        icon: "account"
                    MDTextFieldHintText:
                        text: "Enter First Name"

                MDTextField:
                    id: second_name
                    mode: "outlined"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    theme_font_size: "Custom"
                    font_size: "18sp"
                    MDTextFieldLeadingIcon:
                        icon: "account"
                    MDTextFieldHintText:
                        text: "Enter Second Name"

                MDTextField:
                    id: mobile_number
                    mode: "outlined"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    theme_font_size: "Custom"
                    font_size: "18sp"
                    max_text_length: 10
                    MDTextFieldLeadingIcon:
                        icon: "cellphone"
                    MDTextFieldHintText:
                        text: "Enter Mobile Number"

                MDTextField:
                    id: password_main
                    mode: "outlined"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    password: True
                    MDTextFieldLeadingIcon:
                        icon: "lock"
                    MDTextFieldHintText:
                        text: "Enter Password"

                MDTextField:
                    id: password_confirm
                    mode: "outlined"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    password: True
                    MDTextFieldLeadingIcon:
                        icon: "lock"
                    MDTextFieldHintText:
                        text: "Confirm Password"

                MDDropDownItem:
                    id: profession
                    mode: "outlined"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    on_release: root.open_menu(self)
                    MDDropDownItemText:
                        id: drop_text
                        text: "Select profession"
                        theme_font_size: "Custom"
                        font_size: "18sp"

                MDButton:
                    style: "text"
                    pos_hint: {"center_x":.5, "center_y":.5}
                    on_release:

                    #on_release:
                     #   app.root.current = "Home"
                      #  root.manager.transition.direction = "left"
                    MDButtonText:
                        style: "text"
                        text: "[b]Register[/b]"
                        theme_text_color: "Custom"
                        text_color: "#1d0bde"
